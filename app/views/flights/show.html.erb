<div class="modal-header">
  <h5 class="modal-title" id="viewModalLabel"><%= @flight.title %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Закрыть">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <table class="table table-striped">
    <tr>
      <td>В ангаре</td>
      <td><%= @flight.created_at.strftime('%F %T') %></td>
    </tr>
    <tr>
      <td>Ожидает взлета</td>
      <td>&mdash;</td>
    </tr>
    <tr>
      <td>Вылетел</td>
      <td>&mdash;</td>
    </tr>
  </table>
</div>
