<div class="modal-header">
  <h5 class="modal-title" id="viewModalLabel"><%= t('flight_events.title', number: @flight.title) %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="<%= t('flight_events.close') %>">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <table class="table table-striped">
    <% timings_from_flight(@flight).each do |type, time| %>
    <tr>
      <td><%= t("state/#{type}", scope: 'activerecord.attributes.flight') %></td>
      <td><%= time ? l(time) : '-' %></td>
    </tr>
    <% end %>
  </table>
</div>
